{% extends "DCCRMBundle::layout.html.twig" %}

{% block body %}
    <h1>Account list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phoneoffice</th>
                <th>Website</th>
                <th>Description</th>
                <th>Industry</th>
                <th>Emailaddress</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.phoneOffice }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.industry }}</td>
                <td>{{ entity.emailAddress }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
